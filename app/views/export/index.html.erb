<% @processing_playlists.each do |playlist| %>
    <div class="row">
        <p class="progress-bar-text">Playlist <%= playlist.name %> processing. <span id="processPercent<%= playlist.id.to_s %>">0</span>% Complete</p>
        <div id="parent<%= playlist.id.to_s %>" class="progress progress-striped active">
            <div id="<%= playlist.id.to_s %>" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
            </div>
        </div>
    </div>
<% end %>
<%= form_tag(export_playlist_url, role: 'form') do %>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="playlist_name">Playlist Name</label>
                <input type="text" id="playlist_name" name="playlist_name" class="form-control" placeholder="Playlist Name" value="<%= @playlist_name %>">
            </div>
            <div class="form-group">
                <label for="songs">Turntable.fm songs</label>
                <span class="help-block">To get the list of songs to export, drag this bookmarklet
                    (<a href="javascript:window.location.href='data:application/octet-stream;charset=utf-8,'+JSON.stringify(turntable.playlist.fileids);">Export Playlist</a>)
                    to your bookmark bar. Go to <a href="http://turntable.fm/acth">turntable.fm</a>, enter a room (any room will work)  and click the bookmarklet. Then open the file you downloaded (the file name should be 'download') in your
                    favorite text editor and copy/paste the contents into this box. Make sure you don't change anything or it won't work!!!</span>
                <textarea id="songs" name="songs" class="form-control" rows="10" placeholder="Turntable.fm songs..." value="<%= @songs %>"></textarea>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
<% end %>